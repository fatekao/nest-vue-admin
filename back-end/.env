DATABASE_URL="mysql://root:123456@localhost:3306/nest_admin"

# jwt 配置
JWT_SECRET="123456" # JWT 密钥
JWT_EXPIRES_IN=7d # JWT 过期时间
JWT_REFRESH_SECRET="654321" # JWT 刷新令牌密钥
JWT_REFRESH_EXPIRES_IN=7d # JWT 刷新令牌过期时间
JWT_COOKIE_SECURE=false # 是否使用 HTTPS，生产环境建议设置为 true
JWT_COOKIE_HTTP_ONLY=true # 是否设置 HttpOnly 属性，防止客户端脚本访问 cookie